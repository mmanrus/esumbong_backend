generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite" //"postgresql"
  url      = env("DATABASE_URL") //env("DATABASE_URL")
}

enum UserType {
  admin
  resident
  barangay_official
}

enum roleType {
  none
}

model User {
  id            Int       @id @default(autoincrement())
  fullname      String
  email         String    @unique
  address       String
  contactNumber String
  role          roleType?
  type          UserType

  createAt DateTime @default(now())

  Concern Concern[] @relation("ResidentReports")
}

enum ConcernStatus {
  pending
  inProgress
  resolved
}

model Concern {
  id        Int           @id @default(autoincrement())
  title     String
  details   String
  status    ConcernStatus
  userId    Int
  user      User          @relation("ResidentReports", fields: [userId], references: [id])
  Feedback  FeedBack[]    @relation("OfficialsFeedback")
  updatedAt DateTime
  createdAt DateTime      @default(now())
}

model FeedBack {
  id        Int      @id @default(autoincrement())
  details   String
  createdAt DateTime @default(now())
  updatedAt DateTime
  concernId Int
  concern   Concern  @relation("OfficialsFeedback", fields: [concernId], references: [id])
}
