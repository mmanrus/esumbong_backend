generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite" //"postgresql"
  url      = env("DATABASE_URL") //env("DATABASE_URL")
}

enum UserType {
  admin
  resident
  barangay_official
}

enum roleType {
  none
}

model User {
  id            Int       @id @default(autoincrement())
  fullname      String
  email         String    @unique
  address       String
  contactNumber String
  role          roleType?
  type          UserType

  createAt DateTime @default(now())

  Concern   Concern[]   @relation("ResidentReports")
  FeedBack  FeedBack[]  @relation("UserFeedback")
  Summons   Summons[]   @relation("UserSummons")
  Mediation Mediation[] @relation("UserMediation")
}

enum ConcernStatus {
  pending
  inProgress
  resolved
}

model Concern {
  id        Int           @id @default(autoincrement())
  title     String
  details   String
  status    ConcernStatus
  userId    Int
  user      User          @relation("ResidentReports", fields: [userId], references: [id])
  Feedback  FeedBack[]    @relation("ConcernFeedback")
  updatedAt DateTime?
  issuedAt  DateTime      @default(now())
  Summons   Summons[]     @relation("ConcernSummon")
  Mediation Mediation[]   @relation("MediationConcern")
}

model FeedBack {
  id        Int       @id @default(autoincrement())
  details   String
  issuedAt  DateTime  @default(now())
  updatedAt DateTime?
  userId    Int
  user      User      @relation("UserFeedback", fields: [userId], references: [id])
  concernId Int
  concern   Concern   @relation("ConcernFeedback", fields: [concernId], references: [id])
}

model Summons {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation("UserSummons", fields: [userId], references: [id])
  concernId Int
  concern   Concern   @relation("ConcernSummon", fields: [concernId], references: [id])
  remarks   String?
  issuedAt  DateTime  @default(now())
  updatedAt DateTime?
}

model Mediation {
  id        Int     @id @default(autoincrement())
  userId    Int
  user      User    @relation("UserMediation", fields: [userId], references: [id])
  concernId Int
  concern   Concern @relation("MediationConcern", fields: [userId], references: [id])
}
