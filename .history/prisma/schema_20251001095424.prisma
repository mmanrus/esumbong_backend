generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite" //"postgresql"
  url      = env("DATABASE_URL") //env("DATABASE_URL")
}

enum UserType {
  admin
  resident
  barangay_official
}

enum roleType {
  none
}

model User {
  id            Int       @id @default(autoincrement())
  fullname      String
  email         String    @unique
  address       String
  contactNumber String
  role          roleType?
  type          UserType

  createAt DateTime @default(now())

  Concern Concern[] @relation("ResidentReports")
}

model Concern {
  id      Int    @id @default(autoincrement())
  title   String
  details String
  userId  Int
  user    User   @relation("ResidentReports", fields: [userId], references: [id])

  createdAt DateTime @default(now())
}
