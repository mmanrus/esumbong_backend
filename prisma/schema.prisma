generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserType {
  admin
  resident
  barangay_official
}

enum NotificationType {
  concern
  feedback
  summons
  mediation
  update
  alert
  announcement
}

enum ConcernStatus {
  pending
  inProgress
  canceled
  approved
  rejected
  resolved
  summoned
}

enum Validation {
  pending
  approved
  rejected
}

model User {
  //Fields
  id                 Int              @id @default(autoincrement())
  fullname           String
  email              String           @unique
  password           String
  address            String
  profilePhoto       String?
  position           String?
  contactNumber      String
  type               UserType         @default(admin)
  createAt           DateTime         @default(now())
  verified           Boolean          @default(false)
  // ERD
  // Resident Side
  residentConcern    Concern[]        @relation("ResidentReports")
  residentSummons    Summons[]        @relation("ResidentSummons")
  residentMediations Mediation[]      @relation("ResidentMediations")
  // OfficialSide
  summonsIssued      Summons[]        @relation("OfficialSummons")
  officialMediation  Mediation[]      @relation("OfficialMediations")
  //Polymorphic
  userFeedback       Feedback[]       @relation("UserFeedbacks")
  noticication       Notification[]   @relation("UserNotifications")
  SystemFeedback     SystemFeedback[] @relation("UserSystemFeedback")

  validatedConcerns Concern[] @relation("ValidatedConcern")
  archivedConcerns  Concern[] @relation("ArchivedConcern")
  
  userAnnouncement  Announcement[] @relation("UserAnnouncement")
}

enum MediaType {
  photo
  video
}

model Concern {
  id                      Int             @id @default(autoincrement())
  title                   String?
  details                 String
  location                String?
  categoryId              Int?
  // validation 
  needsBarangayAssistance Boolean         @default(false)
  isArchived              Boolean         @default(false)
  ArchivedById            Int?
  ArchivedBy              User?           @relation("ArchivedConcern", fields: [ArchivedById], references: [id])
  archivedOn              DateTime?
  validation              Validation      @default(pending)
  validatedById           Int?
  validatedBy             User?           @relation("ValidatedConcern", fields: [validatedById], references: [id])
  validatedAt             DateTime?
  media                   Media[]
  category                Category?       @relation("ConcernCategory", fields: [categoryId], references: [id])
  other                   String?
  status                  ConcernStatus   @default(pending)
  userId                  Int
  user                    User            @relation("ResidentReports", fields: [userId], references: [id])
  updatedAt               DateTime?
  issuedAt                DateTime        @default(now())
  updates                 ConcernUpdate[] @relation("ConcernUpdates")
  Summons                 Summons[]       @relation("ConcernSummon")
  Mediation               Mediation[]     @relation("MediationConcern")
}

model ConcernUpdate {
  id            Int           @id @default(autoincrement())
  updateMessage String
  status        ConcernStatus
  createdAt     DateTime      @default(now())
  concernId     Int
  concern       Concern       @relation("ConcernUpdates", fields: [concernId], references: [id])
}

model Media {
  id   Int       @id @default(autoincrement())
  url  String
  type MediaType

  summonId   Int?
  summmon    Summons?  @relation(fields: [summonId], references: [id])
  concernId  Int?
  concern    Concern?  @relation(fields: [concernId], references: [id])
  feedbackId Int?
  feedback   Feedback? @relation(fields: [feedbackId], references: [id])
}

model Category {
  id          Int       @id @default(autoincrement())
  description String?
  name        String
  Concern     Concern[] @relation("ConcernCategory")
}

model Feedback {
  //Fields
  id               Int             @id @default(autoincrement())
  title            String
  issuedAt         DateTime        @default(now())
  updatedAt        DateTime?
  //Relationships
  authorId         Int
  author           User            @relation("UserFeedbacks", fields: [authorId], references: [id])
  //concernId Int
  //concern   Concern   @relation("ConcernFeedback", fields: [concernId], references: [id])
  media            Media[]
  content          String
  feedbackUpdateId Int?
  feedbackUpdate   FeedbackUpdate? @relation(fields: [feedbackUpdateId], references: [id])
}

model FeedbackUpdate {
  id Int @id @default(autoincrement())

  feedbackMessage String
  createdAt       DateTime @default(now())

  feedbacks Feedback[]
}

model Summons {
  // Fields
  id         Int            @id @default(autoincrement())
  remarks    ConcernStatus?
  summonDate DateTime?
  startTime  DateTime?
  endTime    DateTime?
  issuedAt   DateTime       @default(now())
  updatedAt  DateTime?
  media      Media[]
  // Resident who received summons
  // Official who issued summons
  // Relationships
  officialId Int
  official   User           @relation("OfficialSummons", fields: [officialId], references: [id])
  concernId  Int
  concern    Concern        @relation("ConcernSummon", fields: [concernId], references: [id])
  residentId Int
  resident   User           @relation("ResidentSummons", fields: [residentId], references: [id])
}

model Mediation {
  id         Int  @id @default(autoincrement())
  residentId Int
  resident   User @relation("ResidentMediations", fields: [residentId], references: [id])

  officialId Int
  official   User @relation("OfficialMediations", fields: [officialId], references: [id])

  concernId Int
  concern   Concern @relation("MediationConcern", fields: [concernId], references: [id])

  outcome   String
  schedule  DateTime
  updatedAt DateTime?
}

model Notification {
  id        Int              @id @default(autoincrement())
  type      NotificationType
  itemId    Int?
  message   String?
  url       String
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  userId    Int
  user      User             @relation("UserNotifications", fields: [userId], references: [id])
}

model SystemFeedback {
  id      Int    @id @default(autoincrement())
  message String
  userId  Int
  user    User   @relation("UserSystemFeedback", references: [id], fields: [userId])
}


model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  userId    Int
  user      User     @relation("UserAnnouncement",fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime?
}